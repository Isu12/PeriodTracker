<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pinkbg8"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/girlDiaryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Girl Diary"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/nextPeriodText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Next Period Starts"
        android:textColor="#000000"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/nextPeriodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Next Period Starts: "
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/periodEndText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Period Ends"
        android:textColor="#000000"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/periodEndText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:text="Period Ends: "
        android:textColor="#000000"
        android:textSize="12sp" />
</LinearLayout>
